@model Grupo404.Abstracciones.ModelosParaUI.TipoEntidadesDto

@{
    ViewBag.Title = "Editar Tipo de Entidad";
}

<h2>Editar Tipo de Entidad</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Modifique los datos</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.IdTipoEntidad) 
        <div class="form-group">
            @Html.LabelFor(model => model.NombreTipoEntidad, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.NombreTipoEntidad, new { @class = "form-control", required = "required", placeholder = "Ingrese el nombre" })
                @Html.ValidationMessageFor(model => model.NombreTipoEntidad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descripcion, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", required = "required", placeholder = "Ingrese la descripción", rows = 3 })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Estado, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="form-check form-switch">
                    @Html.CheckBoxFor(model => model.Estado, new { @class = "form-check-input", id = "EstadoCheckbox" })
                    <label class="form-check-label" for="EstadoCheckbox">
                        @(Model.Estado ? "Activo" : "Inactivo")
                    </label>
                </div>
                @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                <a href="@Url.Action("ListarTipoEntidades")" class="btn btn-secondary">Cancelar</a>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
