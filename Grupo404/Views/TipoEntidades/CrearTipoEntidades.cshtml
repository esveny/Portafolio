@model Grupo404.Abstracciones.ModelosParaUI.TipoEntidadesDto

@{
    ViewBag.Title = "Crear Tipo de Entidad";
}

<h2>Crear Tipo de Entidad</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Ingrese los datos</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Nombre -->
        <div class="form-group">
            @Html.LabelFor(model => model.NombreTipoEntidad, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.NombreTipoEntidad, new { @class = "form-control", required = "required", placeholder = "Ingrese el nombre" })
                @Html.ValidationMessageFor(model => model.NombreTipoEntidad, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Descripción -->
        <div class="form-group">
            @Html.LabelFor(model => model.Descripcion, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", required = "required", placeholder = "Ingrese la descripción", rows = 3 })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group" style="display: none;">
            @Html.HiddenFor(model => model.FechaDeModificacion)
        </div>

  

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a href="@Url.Action("Index", "TipoEntidades")" class="btn btn-secondary">Volver a la Lista</a>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
